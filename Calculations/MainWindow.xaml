<Window x:Class="AutomotiveNVHSuite.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutomotiveNVHSuite"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ListView ItemsSource="{Binding Properties}" Grid.Column="0" Grid.Row="0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Parameter" DisplayMemberBinding="{Binding PropertyName}"/>
                    <GridViewColumn Header="Value" DisplayMemberBinding="{Binding PropertyValue}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <TextBox Text="{Binding CommandReceived}" Grid.Column="0" Grid.Row="1"/>
    </Grid>


    <Window.DataContext>
        <local:CalculationsViewModel/>
    </Window.DataContext>
</Window>
