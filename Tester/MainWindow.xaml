<Window x:Class="Tester.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tester"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Button Content="Load file" Grid.Column="0" Grid.Row="0" Click="Button_LoadFile_Click"/>
        <TextBox Text="{Binding FileName}" Grid.Column="0" Grid.Row="1"/>

        <Button Content="Settings" Grid.Column="1" Grid.Row="0" Click="Button_Settings_Click"/>

        <Button Content="File info" Grid.Column="1" Grid.Row="1" Click="Button_FileInfo_Click"/>
        <Button Content="Get data" Grid.Column="1" Grid.Row="2" Click="Button_GetData_Click"/>

        <TextBox Text="{Binding ResponseReceived}" Grid.Column="0" Grid.Row="3"/>
    </Grid>

    <Window.DataContext>
        <local:TesterViewModel/>
    </Window.DataContext>
</Window>
